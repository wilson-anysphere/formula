{
  "name": "formula",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "sql.js": "^1.13.0",
    "yjs": "^13.6.27"
  },
  "scripts": {
    "dev": "pnpm --dir packages/grid dev",
    "build:wasm": "pnpm -C packages/engine build:wasm",
    "smoke:wasm": "pnpm -C packages/engine smoke:wasm",
    "dev:web": "pnpm --filter @formula/web dev",
    "build:web": "pnpm --filter @formula/web build",
    "dev:desktop": "pnpm -C apps/desktop dev",
    "dev:sync": "pnpm -C services/sync-server dev",
    "build:desktop": "pnpm -C apps/desktop build",
    "lint": "node tools/ci/check-desktop-renderer-node-free.mjs && pnpm -C apps/desktop check:no-node",
    "generate:function-catalog": "node scripts/generate-function-catalog.js",
    "report:function-parity": "node scripts/report-function-parity.mjs",
    "report:desktop-dist-assets": "node scripts/desktop_dist_asset_report.mjs",
    "test": "pnpm test:vitest && pnpm test:node && pnpm test:sync && pnpm -C apps/desktop test",
    "test:sync": "pnpm -C services/sync-server test",
    "test:vitest": "node scripts/run-vitest.mjs",
    "vitest": "node scripts/run-vitest.mjs",
    "test:node": "node scripts/test-node.mjs",
    "test:release-manifest": "node --test scripts/__tests__/release-manifest.test.mjs",
    "test:e2e": "pnpm -C apps/web test:e2e && pnpm -C apps/desktop test:e2e",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "bench:gpu-kernels": "node packages/gpu-kernels/bench/bench.mjs",
    "benchmark": "node scripts/run-node-ts.mjs apps/desktop/tests/performance/run.ts",
    "test:perf": "pnpm benchmark",
    "bench:tab-completion": "node packages/ai-completion/bench/tabCompletionEngine.bench.mjs",
    "perf:desktop-startup": "node scripts/perf-desktop.mjs startup",
    "perf:desktop-memory": "node scripts/perf-desktop.mjs memory",
    "perf:desktop-size": "node scripts/perf-desktop.mjs size",
    "extension:build": "node tools/extension-builder/src/cli.js build",
    "extension:check": "node tools/extension-builder/src/cli.js check",
    "extension:pack": "node scripts/extension.mjs pack",
    "extension:verify": "node scripts/extension.mjs verify",
    "extension:inspect": "node scripts/extension.mjs inspect"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@formula/scripting": "workspace:*",
    "@formula/workbook-backend": "workspace:*",
    "@types/node": "^22.13.4",
    "esbuild": "^0.25.0",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^24.0.0",
    "pg-mem": "^3.0.5",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  },
  "pnpm": {
    "patchedDependencies": {
      "sql.js@1.13.0": "patches/sql.js@1.13.0.patch"
    }
  }
}
