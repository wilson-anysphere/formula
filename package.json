{
  "name": "formula",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "yjs": "^13.6.27"
  },
  "scripts": {
    "dev": "pnpm --dir packages/grid dev",
    "dev:desktop": "pnpm -C apps/desktop dev",
    "build:desktop": "pnpm -C apps/desktop build",
    "test": "pnpm test:vitest && pnpm test:node && pnpm -C apps/desktop test",
    "test:vitest": "vitest run",
    "test:node": "node scripts/run-node-tests.mjs",
    "test:e2e": "pnpm -C apps/desktop test:e2e",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  }
}
