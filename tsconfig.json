{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "packages/ai-tools/**/*.ts",
    "packages/ai-audit/**/*.ts",
    "packages/ai-audit/**/*.d.ts",
    "packages/engine/**/*.ts",
    "vitest.config.ts"
  ]
}
