{
  "name": "sample-hello",
  "displayName": "Sample Hello",
  "version": "1.0.0",
  "description": "Sample extension demonstrating commands and panels.",
  "publisher": "formula",
  "license": "MIT",
  "main": "./dist/extension.js",
  "module": "./dist/extension.mjs",
  "engines": {
    "formula": "^1.0.0"
  },
  "activationEvents": [
    "onCommand:sampleHello.sumSelection",
    "onCommand:sampleHello.openPanel",
    "onCommand:sampleHello.fetchText",
    "onCommand:sampleHello.copySumToClipboard",
    "onCommand:sampleHello.showGreeting",
    "onView:sampleHello.panel",
    "onCustomFunction:SAMPLEHELLO_DOUBLE"
  ],
  "contributes": {
    "commands": [
      {
        "command": "sampleHello.sumSelection",
        "title": "Sum Selection",
        "category": "Sample Hello"
      },
      {
        "command": "sampleHello.openPanel",
        "title": "Open Sample Panel",
        "category": "Sample Hello"
      },
      {
        "command": "sampleHello.fetchText",
        "title": "Fetch Text (Demo)",
        "category": "Sample Hello"
      },
      {
        "command": "sampleHello.copySumToClipboard",
        "title": "Copy Selection Sum to Clipboard",
        "category": "Sample Hello"
      },
      {
        "command": "sampleHello.showGreeting",
        "title": "Show Greeting (Config Demo)",
        "category": "Sample Hello"
      }
    ],
    "panels": [
      {
        "id": "sampleHello.panel",
        "title": "Sample Hello Panel"
      }
    ],
    "configuration": {
      "title": "Sample Hello",
      "properties": {
        "sampleHello.greeting": {
          "type": "string",
          "default": "Hello",
          "description": "Greeting used by Sample Hello commands"
        }
      }
    },
    "customFunctions": [
      {
        "name": "SAMPLEHELLO_DOUBLE",
        "description": "Doubles the input value",
        "parameters": [
          {
            "name": "value",
            "type": "number",
            "description": "Value to double"
          }
        ],
        "result": {
          "type": "number"
        }
      }
    ]
  },
  "permissions": [
    "cells.read",
    "cells.write",
    "ui.commands",
    "ui.panels",
    "network",
    "clipboard",
    "storage"
  ],
  "scripts": {
    "build": "node build.js",
    "build:check": "node build.js --check"
  }
}
