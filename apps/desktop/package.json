{
  "name": "formula-desktop",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "pnpm -w build:wasm",
    "prebuild": "pnpm -w build:wasm",
    "dev": "node scripts/ensure-pyodide-assets.mjs && vite --port 4174 --strictPort",
    "build": "node scripts/ensure-pyodide-assets.mjs && vite build",
    "preview": "vite preview --port 4174 --strictPort",
    "pyodide:setup": "node scripts/ensure-pyodide-assets.mjs",
    "test:node": "node --test",
    "test": "vitest run",
    "pretest:e2e": "pnpm -w build:wasm",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@formula/ai-audit": "workspace:*",
    "@formula/ai-completion": "workspace:*",
    "@formula/collab-comments": "workspace:*",
    "@formula/data-io": "workspace:*",
    "@formula/engine": "workspace:*",
    "@formula/fill-engine": "workspace:*",
    "@formula/python-runtime": "workspace:*",
    "@formula/scripting": "workspace:*",
    "@formula/spreadsheet-frontend": "workspace:*",
    "@formula/text-layout": "workspace:*",
    "@formula/workbook-backend": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
