{
  "name": "@formula/sync-server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node scripts/node-with-tsx.mjs --watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "node scripts/node-with-tsx.mjs --test test/*.test.ts",
    "keyring:generate": "node scripts/node-with-tsx.mjs src/keyring-cli.ts generate",
    "keyring:rotate": "node scripts/node-with-tsx.mjs src/keyring-cli.ts rotate",
    "keyring:validate": "node scripts/node-with-tsx.mjs src/keyring-cli.ts validate"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.5.0",
    "ws": "^8.18.0",
    "y-websocket": "^2.1.0",
    "yjs": "^13.6.23"
  },
  "optionalDependencies": {
    "y-leveldb": "^0.1.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.13",
    "level-mem": "^5.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20"
  }
